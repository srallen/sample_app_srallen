<% if object.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-error">
      <p>The form contains <%= pluralize(object.errors.count, "error")  %>.</p>
    </div>
    <ul>
      <% object.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
